
        <section id="details-page">
    <div class="main_card">
        <div class="card_left">
            <div class="card-details">

                <h1>Model: {{model}}</h1>
                <h3>Posted by: {{ownerName}}</h3>

                <div class="card-specs">
                    <p class="card-manufacturer">Manufacturer: {{manufacturer}}</p>
                    <p class="card-engine">Engine Type: {{engine}}</p>
                    <p class="card-top-speed">Top Speed: {{topspeed}}</p>
                </div>

                <p class="disc">
                    Description: {{description}}
                </p>
                 
                <!-- If there is no registered user, do not display buttons-->
                <div class="social-btn">
                    <!-- Only for registered user and author of the post -->
                    {{#if isOwner}}
                    <a href="#" class="edit-btn">Edit</a>
                    <a href="#" class="del-btn">Delete</a>
                    {{else}}
                   
                    <!-- logged in users, who have not yet liked-->
                    <a href="/cars/details/{{_id}}/liked" class="like-btn">Like</a>
                    
                    <!-- logged in user who has already liked-->
                    <p class="you-liked">Thanks For The Like</p>
                    {{/if}}
                </div>
                
            </div>
        </div>
        <div class="card_right">
            <img src="{{image}}" alt="Bugatti Chiron Super Sport 300+">
        </div>
    </div>
</section>

<section id="likes">
    <div class="like-info">
        <div class="card_left">
            <div class="card-details">
                <h1>Likes</h1>
                <div class="card-like">
                    <!-- Show the rating of likes, if there are no likes yet, the number must be 0. -->
                    <p class="PV">Total likes: {{likes.length}}</p>
                </div>
                <p class="disc">People who liked the post - No one has liked yet.</p>
 <!-- If there are already people who have cast their like for the post, separate their emails with a comma and a space ", " -->
                    <!-- <p class="disc">People who liked the post - alex@gmai.com, petar@gmail.com, petq@gmail.com</p>-->
            </div>
        </div>
    </div>
</section>

     